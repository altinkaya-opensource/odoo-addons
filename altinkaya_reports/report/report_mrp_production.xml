        </template>
        <template id="report_mrporder_altinkayaF">
            <t t-call="mrp.report_mrporder"></t>
        </template>
        <template id="report_mrporder_altinkayaG">
            <t t-call="mrp.report_mrporder"></t>
        </template>
        <template id="report_mrporder_altinkayaH">
            <t t-call="mrp.report_mrporder"></t>
        </template>
        <template id="report_mrporder_altinkayaI">
            <t t-call="mrp.report_mrporder"></t>
        </template>
    </data>

</odoo>