<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_survey_survey_form" model="ir.ui.view">
        <field name="name">form.survey.survey.inherit</field>
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="after">
                <group>
                    <field name="default_sale_survey"/>
                    <field name="default_partner_survey"/>
                    <field name="default_invoice_survey"/>
                    <field name="url_shortener_id"/>
                    <field name="default_lang_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
