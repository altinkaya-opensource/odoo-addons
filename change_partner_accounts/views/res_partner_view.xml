<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="partner_change_accounts_view" model="ir.ui.view">
            <field name="name">partner.change.accounts.form.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_account_payable_id']" position="after">
                    <button name="change_accounts" type="object" string="Change Partner Accounts" />
                    <button name="change_accounts_to_usd" type="object" string="Change Partner Accounts to USD" />
                    <button name="change_accounts_to_eur" type="object" string="Change Partner Accounts to EURO" />
                    <button name="change_accounts_to_try" type="object" string="Change Partner Accounts to TL" />
                </xpath>
            </field>
        </record>

    </data>

</odoo>
