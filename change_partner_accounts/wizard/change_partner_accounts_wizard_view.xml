<odoo>
    <data>
        <record id="view_change_partner_accounts" model="ir.ui.view">
            <field name="name">Change Partner Accounts</field>
            <field name="model">change.partner.accounts</field>
            <field name="arch" type="xml">
                <form string="Choose New Accounts">
                    <p class="oe_gray">
                        Select new accounts
                    </p>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="account_receivable_id"
                                   domain="[('internal_type', '=', 'receivable'), ('deprecated', '=', False),
                                   ('id', '!=', 'partner_id.property_account_receivable_id.id')]"/>
                            <field name="account_payable_id"
                                   domain="[('internal_type', '=', 'payable'), ('deprecated', '=', False),
                                   ('id', '!=', 'partner_id.property_account_payable_id.id')]"/>

                        </group>
                    </group>
                    <footer>
                        <button name="change_accounts"
                                string="Apply"
                                type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_change_dest_location" model="ir.actions.act_window">
            <field name="name">Change Partner Accounts</field>
            <field name="res_model">change.partner.accounts</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_change_partner_accounts"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>