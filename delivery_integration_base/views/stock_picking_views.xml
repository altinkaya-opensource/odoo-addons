<odoo>
    <record id="view_carrier_picking_withcarrier_out_form" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form" />
        <field name="groups_id" eval="[(4, ref('base.group_no_one'))]" />
        <field name="arch" type="xml">
            <xpath expr="//header" position='inside'>
                <button
          name="carrier_get_label"
          string="Cargo Label"
          type="object"
          attrs="{
                        'invisible':[
                            '|',
                            ('carrier_tracking_ref', '=', False),
                            ('state', '!=', 'done')
                        ]
                    }"
        />
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field
          name="picking_total_weight"
          attrs="{'readonly': [('carrier_tracking_ref', '!=', False)]}"
        />
                <field
          name="carrier_package_count"
          attrs="{'readonly': [('carrier_tracking_ref', '!=', False)]}"
        />
            </xpath>
            <xpath expr="//field[@name='delivery_state']" position="after">
                <field
          name="carrier_received_by"
          attrs="{'invisible': [('delivery_state', '!=', 'customer_delivered')]}"
        />
                <field name="shipping_number" attrs="{'readonly': 1}" />
            </xpath>
            <xpath expr="//field[@name='shipping_weight']" position="after">
                <field
          name="carrier_total_weight"
          attrs="{'readonly': [('carrier_tracking_ref', '!=', False)]}"
        />
                <field
          name="carrier_shipping_cost"
          attrs="{'readonly': 1}"
          widget="monetary"
        />
                <field
          name="carrier_shipping_vat"
          attrs="{'readonly': 1}"
          widget="monetary"
        />
                <field
          name="carrier_shipping_total"
          attrs="{'readonly': 1}"
          widget="monetary"
        />
                <field
          name="carrier_currency_id"
          attrs="{'readonly': 1, 'invisible': 1}"
        />
                <field name="mail_sent" attrs="{'readonly': 1}" />
            </xpath>
        </field>
    </record>
</odoo>
