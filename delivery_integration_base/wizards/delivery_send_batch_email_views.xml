<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="delivery_send_batch_email" model="ir.ui.view">
            <field name="name">delivery.send.batch.email.form</field>
            <field name="model">delivery.send.batch.email</field>
            <field name="arch" type="xml">
                <form string="Send E-mails To Customer">
                    <footer>
                        <button
              string="Send Mails"
              name="send_batch_email"
              type="object"
              default_focus="1"
              class="btn-primary"
            />
                        <button
              string="Cancel"
              class="btn-secondary"
              special="cancel"
            />
                    </footer>
                </form>
            </field>
        </record>

        <act_window
      id="action_delivery_send_batch_email"
      multi="True"
      key2="client_action_multi"
      name="Send E-mails To Customer"
      res_model="delivery.send.batch.email"
      src_model="stock.picking"
      view_mode="form"
      target="new"
      view_type="form"
    />

    </data>
</odoo>
